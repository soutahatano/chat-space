.chat-main
  .chat-main__group-info
    .chat-main__group-info__left-box
      .chat-main__group-info__left-box__group-name
        = @group.name
      %ul.chat-main__group-info__left-box__member-list
        Member :
        - @group.users.each do |user|
          %li.chat-main__group-info__left-box__member-list__name
            = user.name
    .chat-main__group-info__edit-btn
      = link_to edit_group_path(@group) do
        %p.chat-main__group-info__edit-btn__edit
          Edit
  .chat-main__message-list
    = render @messages
  .chat-main__message-form
    = form_for [@group, @message] do |f|
      .chat-main__message-form__box
        .chat-main__message-form__box__window
          = f.text_field :text, class: 'chat-main__message-form__box__window__text', placeholder: 'type a message' 
          = f.label :image, class: 'chat-main__message-form__box__window__imarge' do
            .chat-main__message-form__box__window__imarge__btn.far.fa-image
            = f.file_field :image, class: 'chat-main__message-form__box__window__imarge__btn__hidden'
        = f.submit 'Send', class: 'chat-main__message-form__box__send-btn'