.chat-main__message-list__message{data: {message: {id: message.id}}}
  .chat-main__message-list__message__tag
    .chat-main__message-list__message__tag__name
      = message.user.name
    .chat-main__message-list__message__tag__time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__message-list__message__content
    - if message.text.present?
      %p.chat-main__message-list__message__content__text
        = message.text
    = image_tag message.image.url, class: 'chat-main__message-list__message__content__imarge' if message.image.present?